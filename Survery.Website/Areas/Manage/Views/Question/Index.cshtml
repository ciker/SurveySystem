@model IEnumerable<Survery.Website.Areas.Manage.Models.QuestionViewModel>

@{
    ViewBag.Title = "Index";
}
@section pagecss{
    <style>
        .blur {
            -webkit-filter: blur(2px); /* Chrome, Opera */
            -moz-filter: blur(2px);
            -ms-filter: blur(2px);
            filter: blur(2px);
        }
    </style>
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { sId = ViewData["SurveyId"] })
</p>
<div>
    <table class="table" style="float:left;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SortId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SortId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SurveryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

    <div style="float:left;margin-left:80px;">
        <p>预览</p>
        <iframe id="preView" src="~/Quiz?sId=@ViewData["SurveyId"]" width="480" height="270" style="border:1px solid #c9c9c9"></iframe>
    </div>
</div>
